---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="author" content="Edgars Burtnieks" />
        <meta name="description" content="Software Engineer" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    *,
    *::before,
    *::after {
        box-sizing: border-box;
    }

    :root {
        color-scheme: light dark;
    }

    html {
        font-family: system-ui, sans-serif;
        line-height: 1.6;
        font-size: 1.5rem;
    }

    body {
        background-color: light-dark(hsl(0deg 0% 97.25%), hsl(0deg 0% 13.33%));
        color: light-dark(hsl(0deg 0% 13.33%), hsl(0deg 0% 97.25%));
    }

    body,
    h1,
    h2,
    p,
    figure,
    ul,
    ol,
    blockquote {
        margin: 0;
    }

    h1,
    h2 {
        text-wrap: balance;
    }

    h1 {
        font-size: 2.25rem;
        line-height: 1.1;
        margin-block-end: 0.875em;
    }

    h2 {
        font-size: 1.5rem;
        line-height: 1.0833333;
        margin-block: 2.5em 0.8333333em;
    }

    p {
        margin-block: 1.3333333em;
        text-wrap: pretty;
    }

    img,
    video {
        display: block;
        max-inline-size: 100%;
        block-size: auto;
    }

    img {
        margin: 1.3333333em auto;
    }

    figure {
        margin-block: 2.66667rem;
    }

    figcaption {
        font-size: 0.825rem;
        font-style: italic;
        line-height: 1.3;

        p {
            margin-block: 0;
        }
    }

    .readable-inline-size {
      inline-size: min(55ch, 100% - 2rem);
      margin-inline: auto;
    }

    .banner {
        background-color: hsl(49 100% 87.5%);
        padding: 8px 12px;
        font-weight: 700;
        font-size: 0.75rem;

        p {
            margin: 0;
        }
    }
</style>
